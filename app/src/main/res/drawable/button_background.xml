<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="@color/default_color_popin_title_bg" />
            <gradient android:angle="-90" android:startColor="@color/default_color_popin_title_bg" android:endColor="@color/default_color_popin_title_bg"  />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="@color/light_blue" />
            <gradient android:angle="-90" android:startColor="@color/holo_blue_light" android:endColor="@color/light_blue"  />
        </shape>
    </item>
</selector>